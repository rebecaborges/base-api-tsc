{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "ES2020"],
    "types": ["express", "reflect-metadata"],
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
